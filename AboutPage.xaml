<Page
    x:Class="MonopolyAnalysis.AboutPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MonopolyAnalysis"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    NavigationCacheMode="1"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Background="#FF726DA8">

        <NavigationView PaneDisplayMode="Top" IsBackButtonVisible="Collapsed" IsSettingsVisible="False" x:Name="NavigationViewControl" ItemInvoked="Navigate" >
            <NavigationView.MenuItems>
                <NavigationViewItem Content="Simulation"/>
                <NavigationViewItem Content="Analysis" />
                <NavigationViewItem Content="About" />
            </NavigationView.MenuItems>
        </NavigationView>
        <TextBlock x:Name="title" Text="About" Margin="10,47,-10,-47" />
    </Grid>
</Page>
